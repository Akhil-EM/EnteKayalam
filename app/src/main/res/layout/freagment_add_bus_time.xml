<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_frag_add_bus_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Add Bust time"
        android:textColor="@color/black"
        android:layout_margin="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_frg_bus_name"
        android:layout_below="@+id/txt_frag_add_bus_time"
        android:layout_margin="25dp"
        android:hint="bus name"/>
    <TextView
        android:id="@+id/txt1_frag_add_bus_time"
        android:layout_below="@id/edt_frg_bus_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="kayalam to"
        android:textColor="@color/black"
        android:layout_margin="10dp"/>
    <Spinner
        android:gravity="center"
        android:id="@+id/addSpinnerBusToType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt1_frag_add_bus_time"
        android:layout_margin="15dp"/>
    <TextView
        android:text="choose time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timepick"
        android:textColor="@color/black"
        android:layout_below="@+id/addSpinnerBusToType"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_frg_bus_add"
        android:layout_below="@id/timepick"
        android:layout_marginTop="10dp"
        android:text="add"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"/>

</RelativeLayout>