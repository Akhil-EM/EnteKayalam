<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_frg_commen_name"
        android:layout_margin="25dp"
        android:hint="name"/>
    <EditText
        android:hint="mobileno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_frg_commen_mobile"
        android:inputType="number"
        android:layout_below="@+id/edt_frg_commen_name"
        android:layout_margin="25dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_frg_commen_comment"
        android:layout_below="@id/edt_frg_commen_mobile"
        android:layout_marginTop="10dp"
        android:text="add"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp">
    </Button>
</RelativeLayout>