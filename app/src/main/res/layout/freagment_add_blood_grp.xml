<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_frag_add_blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Add a person"
        android:textColor="@color/black"
        android:layout_margin="10dp"></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_frg_blood_name"
        android:layout_below="@+id/txt_frag_add_blood"
        android:layout_margin="25dp"
        android:hint="name"/>
    <EditText
        android:hint="mobileno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_frg_blood_mobile"
        android:inputType="number"
        android:layout_below="@+id/edt_frg_blood_name"
        android:layout_margin="25dp"/>
    <Spinner
        android:gravity="center"
        android:id="@+id/addSpinnerblood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edt_frg_blood_mobile"
        android:layout_margin="15dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_blood"
        android:layout_below="@id/addSpinnerblood"
        android:layout_marginTop="10dp"
        android:text="add"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"/>

</RelativeLayout>