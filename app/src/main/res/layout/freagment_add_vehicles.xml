<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView
        android:id="@+id/txt_frag_add_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Add a vehicle"
        android:textColor="@color/black"
        android:layout_margin="10dp"/>
    <Spinner
        android:gravity="center"
        android:id="@+id/addSpinnerVehicleType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_frag_add_vehicle"
        android:layout_margin="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_frg_vehicle_name"
        android:layout_below="@+id/addSpinnerVehicleType"
        android:layout_margin="25dp"
        android:hint="name"/>
    <EditText
        android:hint="mobileno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_frg_vehicle_mobile"
        android:inputType="number"
        android:layout_below="@+id/edt_frg_vehicle_name"
        android:layout_margin="25dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_frg_vehicle"
        android:layout_below="@id/edt_frg_vehicle_mobile"
        android:layout_marginTop="10dp"
        android:text="add"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"/>


</RelativeLayout>