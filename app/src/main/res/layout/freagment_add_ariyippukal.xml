<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FragmentAddAriyippukal">
      <TextView
          android:id="@+id/txt_frag_add"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:text="Add Announcement"
          android:textColor="@color/black"
          android:layout_margin="10dp"></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_tittle_ariyippu"
        android:layout_below="@+id/txt_frag_add"
        android:layout_margin="25dp"
        android:hint="tittle"/>
    <EditText
        android:hint="content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/add_content_ariyippukal"
        android:layout_below="@+id/add_tittle_ariyippu"
        android:layout_margin="25dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_content_comment"
        android:layout_below="@id/add_content_ariyippukal"
        android:layout_marginTop="10dp"
        android:text="add"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"/>
</RelativeLayout>